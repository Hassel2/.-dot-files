{
	"layer": "bottom",
    "output": "eDP-1",
	"position": "top",
	"height": 46,
	"spacing": 0,
    "modules-center": ["custom/workspaces"],
	"modules-left": [
		// "custom/spider",
		"cpu",
		"custom/separator",
		"memory", 
		"tray"
		],
	"modules-right": [
		"battery",
		"custom/separator",
		"network",
		"custom/separator",
		"hyprland/language",
		"custom/separator",
		"pulseaudio",
		"custom/separator",
		"clock"
		],

	"custom/spider": {
		"format": "<span color=\"#a6e3a1\"><big>󱇪</big></span>",
		"on-click": "$HOME/.config/waybar/script/eww_datetime.sh"
	},

	"custom/artix": {
		"format": "<span color=\"#fabd2f\">BTW I use Artix</span>",
	},

	"cpu": {
		"format": "<span color=\"#cdd6f4\"> {usage}%</span>"
	},

	"memory": {
		"format": "<span color=\"#cdd6f4\"><big>󰍛 </big>{used} GiB</span>"
	},

	"tray": {
		"icon-size": 20,
		"spacing": 10
	},

	"battery": {
		"format-icons": [
			"󰂎",
			"󰁺",
			"󰁻",
			"󰁼",
			"󰁽",
			"󰁾",
			"󰁿",
			"󰂀",
			"󰂁",
			"󰂂",
			"󰁹",
		],
		"states": {
			"critical": 10
		},
		"tooltip": "true",
		"tooltip-format": "{capacity}% left",
		"format-charging": "<span color=\"#cdd6f4\">󰚥<big>{icon}</big></span>",
		"format-discharging": "<span color=\"#cdd6f4\">󰚦<big>{icon}</big></span>",
		"format-critical": "<span color=\"#f38ba8\"><big>󱟩</big></span>",
	},

	"network": {
		"format-icons": [
			""
		],
		"format-disconnected": "<span color=\"#f9e2af\"><big></big></span>",
		"format": "<span color=\"#cdd6f4\"><big>{icon}</big></span>"	
	},

	"hyprland/language": {
		"format": " {}",
		"format-en": "en",
		"format-ru": "ru",
		"alt": " en"
	},

	"pulseaudio" : {
		"format-icons": {
			"default": [
				"",
				"",
				"",
			],
			"speaker": [
				"",
				"",
				"",
			],
			"headphone": [
				""
			]
		},
		"format-muted": "<span color=\"#313244\"><big>󰖁</big></span>",
		"format": "<span color=\"#cdd6f4\"><big>{icon}</big></span>"
	},

	"clock": {
		"format": "<span color=\"#cdd6f4\">{:%a %b %d %H:%M}</span>",
	},

	"custom/separator": {
		"format": "<span color='#313244'>|</span>",
	},

    "custom/workspaces": {
		"exec": "$HOME/.config/waybar/script/workspaces.sh",
		"return-type": "json",
		"interval": "once",
		"format": "{}",
		"signal": 8,
    },
}
